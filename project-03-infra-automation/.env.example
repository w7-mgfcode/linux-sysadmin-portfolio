# Project 03: Infrastructure Automation Toolkit - Environment Configuration
# Copy this file to .env and configure as needed

# =============================================================================
# Project Settings
# =============================================================================

# Project name (used for container prefixes)
PROJECT_NAME=infra-automation

# Timezone
TZ=UTC

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# =============================================================================
# Directory Paths
# =============================================================================

# Report output directory (inside containers)
REPORT_DIR=/var/reports

# Backup directory (inside containers)
BACKUP_DIR=/var/backups

# Log directory (inside containers)
LOG_DIR=/var/log/infra

# =============================================================================
# Script Configuration
# =============================================================================

# Server Hardening
HARDENING_BACKUP_RETENTION_DAYS=30
HARDENING_DRY_RUN=false

# Network Diagnostics
NETWORK_TIMEOUT_SECONDS=10
NETWORK_MAX_HOPS=30

# Service Watchdog
WATCHDOG_CHECK_INTERVAL=60
WATCHDOG_RESTART_LIMIT=3

# Backup Manager
BACKUP_COMPRESSION=gzip
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=6

# Log Rotation
LOG_ROTATION_SIZE_MB=100
LOG_ROTATION_AGE_DAYS=7
LOG_ROTATION_KEEP_COUNT=5

# System Inventory
INVENTORY_OUTPUT_FORMAT=json
INVENTORY_HISTORY_KEEP_DAYS=90
